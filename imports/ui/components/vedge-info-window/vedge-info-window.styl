/* Set the component style here */
.os-vedge-info-window
  visibility: none

  position: absolute;
  text-align: left;
  opacity: 0
  font: normal 18px sans-serif !important;
  /* width: 60px; */
  /* height: 28px; */
  padding: 20px;
  font: 16px sans-serif;
  background: dk-gray1;
  color white
  border: 2px solid stark-blue
  pointer-events: none;

  transition: opacity 0.5s linear

.os-vedge-info-window.cl-visible 
  visibility: visible
  opacity: 0.9
  transition: visibility 0s, opacity 0.2s linear

